// Define database connection via the `NEXT_PUBLIC_PRISMA_DATABASE_URL` env var
datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

// Define custom output path for generated Prisma Client
generator client {
  provider = "prisma-client-js"
  // Use default output (node_modules/.prisma/client) to avoid absolute paths
}

// Enum definitions for the application
enum PostRole {
  AUTHOR
  EDITOR
  ADMIN
  CONTRIBUTOR
}

model Images {
  id        Int      @id @default(autoincrement())
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  postId    Int?

  post Post? @relation(fields: [postId], references: [id])
}

// CMS (Content Management System) models - Pages and SEO
model Page {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique
  description String?
  content     String?
  status      String   @default("draft")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  userId      Int? // Son güncelleyen kullanıcı ID'si
  pageSEOId   Int?     @unique // One-to-one için unique foreign key

  pageSEO PageSEO? @relation(fields: [pageSEOId], references: [id])
}

model PageSEO {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  keywords    String[]
  canonical   String?
  noIndex     Boolean  @default(false)
  noFollow    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  page        Page? // Back-reference (opsiyonel)
}

// Content management models - Posts, Images, and User-Post relationships
model Post {
  id        Int        @id @default(autoincrement())
  title     String
  content   String?
  published Boolean    @default(false)
  users     PostUser[]
  images    Images[]
}

model PostUser {
  postId    Int
  userId    Int
  role      PostRole @default(AUTHOR) // AUTHOR, EDITOR, ADMIN, CONTRIBUTOR
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@id([postId, userId])
}

// User management models
model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  firstName String?
  lastName  String?
  posts     PostUser[]
  tokens    Token[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now())
}

model Token {
  id                    Int      @id @default(autoincrement())
  accessToken           String
  refreshToken          String
  accessTokenExpiresAt  DateTime
  refreshTokenExpiresAt DateTime
  createdAt             DateTime @default(now())
  updatedAt             DateTime @default(now())
  userId                Int

  user User @relation(fields: [userId], references: [id])

  @@unique([accessToken, refreshToken, userId])
}
